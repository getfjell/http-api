{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@examples/*": [
        "./examples/*"
      ],
      "@fjell/http-api": [
        "./src/index.ts"
      ]
    },
    "declaration": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "useUnknownInCatchVariables": false,
    "types": [
      "vitest/globals"
    ],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "metro.config.js",
    "./examples/**/*",
    "./tests/**/*",
    "./dist/**/*"
  ]
}
