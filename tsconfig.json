{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@examples/*": [
        "./examples/*"
      ],
      "@fjell/http-api": [
        "./src/index.ts"
      ]
    },
    "declaration": true,
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "useUnknownInCatchVariables": false
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "metro.config.js"
  ]
}
